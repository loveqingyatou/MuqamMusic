<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:id="@+id/im_player_album"
        android:layout_width="@dimen/album_width"
        android:layout_height="@dimen/album_width"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_layout_player_album_big"
        android:padding="@dimen/album_pading"
        android:scaleType="fitCenter"
        android:src="@drawable/default_image_player_album" />

    <LinearLayout
        android:id="@+id/ll_player_other"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/im_player_album"
        android:paddingTop="@dimen/player_operator_top"
        android:visibility="invisible" >

        <Button
            android:id="@+id/btn_player_fm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/bg_button_player_fm" />

        <Button
            android:id="@+id/btn_player_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/bg_button_player_collect" />

        <Button
            android:id="@+id/btn_player_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/bg_button_player_share" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_songname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_player_other"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="18sp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_singer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_songname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="14sp"
        android:textColor="@color/white" />
    
</RelativeLayout>
